{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
<div class="container">
	<h1>{{ article.titre }}</h1>
	<img src="{{ asset('img/articles/' ~ article.image) }}" alt="">
	<p>Publi√© le
		{{article.date|date('d/m/Y')}}</p>
	<p>{{article.contenu}}</p>

	{{ form( form, {'action': path( 'creer_commentaire', {'article_id': article.id} )} ) }}

	{% for commentaire in article.commentaires %}
	<p>
		<span class="d-block font-weight-bold">Le {{ commentaire.date|date('d/m/Y') }}</span>
		{{ commentaire.contenu }}
	</p>
	{% else %}
	<p>Cet article n'a pas encore de commentaire.</p>
	{% endfor %}
</div>
{% endblock %}